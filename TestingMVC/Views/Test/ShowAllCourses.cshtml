@model List<Course>

<h1>Courses</h1>
<div class="actions">
    <a href="/Test/AddNew" class="btn btn-success">Add New Course</a>
    <a href="/Test/ShowAllCourses" class="btn btn-info">Refresh</a>
</div>

<div class="search-form">
  
    <form asp-action="ShowAllCourses" asp-controller="Test" method="get">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search by name">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Degree</th>
            <th>Min Degree</th>
            <th>Hours</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>@course.Degree</td>
                <td>@course.MinDegee</td>
                <td>@course.Hours</td>
                <td>@course.Department.Name</td>
                <td>
                    <a href="/Test/Details/@course.Id" class="btn btn-primary">Details</a>
                    <a href="/Test/Edit/@course.Id" class="btn btn-warning">Edit</a>
                    <a href="/Test/Delete/@course.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
